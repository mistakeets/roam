<% include shared/header %>
  <div>
    <form method='post' action='/signup'>
      <div class='row'></div>
      <div class='row'></div>
      <div class='row'>
        <div class='col s12'>
          <h2>Sign Up for Roam</h2>
        </div>
      </div>
      <div class='row'>
        <% if (message.length > 0) { %>
          <div class="alert alert-danger">
            <%= message %>
          </div>
          <% } %>
      </div>
      <div class='row'>
        <div class='col s2 offset-s3 right-align margin-top'>Name:</div>
        <div class='col s4'><input type='text' name='name'></input>
        </div>
      </div>
      <div class='row'>
        <div class='col s2 offset-s3 right-align margin-top'>Email:</div>
        <div class='col s4'><input type='email' name='email'></input>
        </div>
      </div>
      <div class='row'>
        <div class='col s2 offset-s3 right-align margin-top'>Password:</div>
        <div class='col s4'><input type='password' name='password'></input>
        </div>
      </div>
      <div class='row'>
        <div class='col s2 offset-s3'></div>
        <div class='col s4'><button class='btn'>Sign Up</button>
        </div>
      </div>
    </form>
  </div>

  <% include shared/footer %>
